<Page loaded="onPageLoaded">
    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="FileMaker Image Uploader" />
    </ActionBar>
    <GridLayout rows="55, *" style="padding-bottom: 20px;">
        <Button text="Take photo" class="btn -primary" tap="takePhoto" android:style="height: 50" isEnabled="{{ !isLoading }}" />
        <Image id="img" row="1" />
    </GridLayout>
</Page>
